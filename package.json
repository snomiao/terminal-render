{
  "name": "terminal-render",
  "version": "0.0.0",
  "description": "Terminal text renderer that handles ANSI escape sequences and control characters",
  "keywords": [
    "ansi",
    "ansi-escapes",
    "render",
    "terminal",
    "text"
  ],
  "homepage": "https://github.com/snomiao/terminal-render#readme",
  "bugs": {
    "url": "https://github.com/snomiao/terminal-render/issues"
  },
  "license": "MIT",
  "author": "snomiao",
  "repository": {
    "type": "git",
    "url": "https://github.com/snomiao/terminal-render.git"
  },
  "files": [
    "*.ts",
    "dist"
  ],
  "type": "module",
  "main": "index.ts",
  "exports": {
    "types": "./index.ts",
    "import": "./dist/index.js"
  },
  "scripts": {
    "test": "bun test && bunx tsc",
    "test:watch": "bun test --watch",
    "build": "run-p build:index build:cli",
    "build:index": "bun build index.ts --outdir=dist",
    "build:cli": "bun build cli.ts --outdir=dist --target=node",
    "dev": "bun index.ts",
    "fmt": "bunx oxlint --fix && bunx oxfmt",
    "prepare": "husky"
  },
  "dependencies": {
    "from-node-stream": "^0.1.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/ansi-escapes": "^3.0.1",
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.6.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "ansi-escapes": "^7.0.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.22.0",
    "oxlint": "^1.37.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  }
}
