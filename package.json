{
  "name": "terminal-render",
  "version": "1.0.0",
  "description": "Terminal text renderer that handles ANSI escape sequences and control characters",
  "main": "index.ts",
  "module": "index.ts",
  "scripts": {
    "test": "vitest && tsc",
    "build": "bun run build index.ts dist/index.js",
    "dev": "bun index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "terminal",
    "ansi",
    "text",
    "render"
  ],
  "author": "snomiao",
  "license": "MIT",
  "devDependencies": {
    "@types/ansi-escapes": "^3.0.1",
    "@types/bun": "latest",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "ansi-escapes": "^7.0.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {},
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "private": true
}
