{
  "name": "terminal-render",
  "version": "1.0.0",
  "description": "Terminal text renderer that handles ANSI escape sequences and control characters",
  "main": "index.ts",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "types": "./index.ts"
  },
  "scripts": {
    "test": "bun test && tsc",
    "test:watch": "bun test --watch",
    "build": "run-p build:index build:cli",
    "build:index": "bun build index.ts --outdir=dist",
    "build:cli": "bun build cli.ts --outdir=dist --target=node",
    "dev": "bun index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "terminal",
    "ansi-escapes",
    "ansi",
    "text",
    "render"
  ],
  "author": "snomiao",
  "license": "MIT",
  "devDependencies": {
    "@types/ansi-escapes": "^3.0.1",
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "ansi-escapes": "^7.0.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "typescript": "^5.2.2",
    "npm-run-all": "^4.1.5",
    "@types/yargs": "^17.0.33",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "yargs": "^18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
